<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamTaskList.SortPupUp">

    <StackLayout Padding="20, 20, 20, 20" VerticalOptions="Center" HorizontalOptions="Center">
        <Label Text="Sorting options:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
        <Picker x:Name="whatSort" Title="What to sort?">
            <Picker.Items>
                <x:String>Title</x:String>
                <x:String>Priority</x:String>
            </Picker.Items>
        </Picker>
        <Picker x:Name="howSort" Title="How to sort?">
            <Picker.Items>
                <x:String>Ascending</x:String>
                <x:String>Descending</x:String>
            </Picker.Items>
        </Picker>
        <Button Text="Click me!"
                Clicked="Button_Clicked"/>
    </StackLayout>
    
</ContentPage>