<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamTaskList.TaskDetailPage"
             Title="Edit Task">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Revert" Clicked="OnRevertTask"/>
        <ToolbarItem Text="Save" Clicked="OnSaveTask"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="taskIdLabel" Text="Task Id: "/>

            <Label x:Name="taskTitleLabel" Text="Title: "/>
            <Entry x:Name="taskTitleEntry" Placeholder="Enter title"/>

            <Label x:Name="taskDescriptionLabel" Text="Description: "/>
            <Editor x:Name="taskDescriptionEntry"/>

            <Picker x:Name="taskPriorityPicker" Title="Priority">
                <Picker.Items>
                    <x:String>1</x:String>
                    <x:String>2</x:String>
                    <x:String>3</x:String>
                    <x:String>4</x:String>
                    <x:String>5</x:String>
                </Picker.Items>
            </Picker>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>